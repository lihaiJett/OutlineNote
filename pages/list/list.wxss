/* pages/list/list.wxss */
page{
height: 100%;
width: 100%;
}
.page {
  position: relative;
  width: 100%;
  height: 100%;
}
.lists {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.list-i {
  margin-bottom: 20rpx;
  padding: 18rpx 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 200rpx;
  background: #e0f6ff;
  box-shadow:  0px 2px 25px rgba(0, 0, 0, .7);
  -webkit-transition: all .1s ease;
  -moz-transition: all .1s ease;
  transition: all .1s ease;
}
.list-i:active{
  transform: scale(0.95);
}
.content {
  padding: 0 28rpx;
  height: 118rpx;
  line-height: 118rpx;
  border-bottom: 1px solid skyblue;
}
.time {
  padding: 0 28rpx;
  line-height: 88rpx;
  color: #88f;
}
.add {
  position: absolute;
  right: 58rpx;
  bottom: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  background: #b3fbdb;
  border: 1px solid #888;
  border-radius: 50%;
  box-shadow:  0px 9px 25px rgba(0, 0, 0, .7);
  -webkit-transition: all .1s ease;
  -moz-transition: all .1s ease;
  transition: all .1s ease;
}
.add:active{
  position: absolute;
  right: 58rpx;
  bottom: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  background: #b3fbdb;
  border: 1px solid #888;
  border-radius: 50%;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, .9);
}
.add image {
  width: 48rpx;
  height: 48rpx;
}